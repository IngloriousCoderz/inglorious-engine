{
  "name": "inglorious-engine",
  "private": true,
  "description": "A JavaScript game engine written with global state, immutability, and pure functions in mind. Have fun(ctional programming) with it!",
  "author": "IceOnFire <antony.mistretta@gmail.com> (https://ingloriouscoderz.it)",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write '**/*.{js,jsx}'",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "build-docs": "pnpm --filter @inglorious/docs build-storybook",
    "dev": "turbo dev",
    "prepare": "husky",
    "version": "pnpm run build && pnpm run lint && pnpm run test && changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.34.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^9.1.7",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">= 22"
  }
}
