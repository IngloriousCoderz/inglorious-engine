{
  "name": "@inglorious/engine",
  "version": "0.1.1",
  "description": "A JavaScript game engine written with global state, immutability, and pure functions in mind. Have fun(ctional programming) with it!",
  "author": "IceOnFire <antony.mistretta@gmail.com> (https://ingloriouscoderz.it)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IngloriousCoderz/inglorious-engine.git"
  },
  "homepage": "https://inglorious-engine.vercel.app/",
  "keywords": [
    "game-engine",
    "functional-programming",
    "gamedev",
    "javascript",
    "ecs",
    "data-oriented"
  ],
  "type": "module",
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./*": "./src/*"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write '**/*.{js,jsx}'",
    "test:watch": "vitest",
    "test": "vitest run",
    "start": "serve",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.23.0",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-links": "^9.1.3",
    "@storybook/react-vite": "^9.1.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^9.1.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "sass": "^1.77.8",
    "serve": "^14.2.4",
    "storybook": "^9.1.3",
    "vite": "^7.1.3",
    "vitest": "^1.6.0"
  }
}
