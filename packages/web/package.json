{
  "name": "@inglorious/web",
  "version": "2.1.0",
  "description": "A new web framework that leverages the power of the Inglorious Store combined with the performance and simplicity of lit-html.",
  "author": "IceOnFire <antony.mistretta@gmail.com> (https://ingloriouscoderz.it)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IngloriousCoderz/inglorious-engine.git",
    "directory": "packages/web"
  },
  "bugs": {
    "url": "https://github.com/IngloriousCoderz/inglorious-engine/issues"
  },
  "keywords": [
    "lit-html",
    "state",
    "state-management",
    "store",
    "redux",
    "inglorious-store"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.js"
    },
    "./table/base.css": "./src/table/base.css",
    "./table/theme.css": "./src/table/theme.css"
  },
  "files": [
    "src",
    "types"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write '**/*.{js,jsx}'",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@inglorious/store": "workspace:*",
    "@inglorious/utils": "workspace:*",
    "lit-html": "^3.3.1"
  },
  "devDependencies": {
    "@inglorious/eslint-config": "workspace:*",
    "prettier": "^3.6.2",
    "vite": "^7.1.3"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">= 22"
  }
}
