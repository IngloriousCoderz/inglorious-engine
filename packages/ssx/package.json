{
  "name": "@inglorious/ssx",
  "version": "1.0.0",
  "description": "Server-Side-X. Xecution? Xperience? Who knows.",
  "author": "IceOnFire <antony.mistretta@gmail.com> (https://ingloriouscoderz.it)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IngloriousCoderz/inglorious-forge.git",
    "directory": "packages/store"
  },
  "homepage": "https://inglorious-engine.vercel.app/",
  "bugs": {
    "url": "https://github.com/IngloriousCoderz/inglorious-forge/issues"
  },
  "keywords": [
    "ssg",
    "ssr",
    "server",
    "inglorious",
    "web",
    "framework"
  ],
  "type": "module",
  "bin": {
    "ssx": "./bin/ssx.js"
  },
  "files": [
    "bin",
    "src",
    "!src/**/__fixtures__",
    "!src/**/__snapshots__"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write '**/*.{js,jsx}'",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test:watch": "vitest",
    "test": "vitest run",
    "dev": "node ./bin/ssx.js dev -r ./src/__fixtures__",
    "build": "node ./bin/ssx.js build -r ./src/__fixtures__",
    "preview": "pnpm dlx serve dist"
  },
  "dependencies": {
    "@inglorious/web": "workspace:*",
    "@lit-labs/ssr": "^4.0.0",
    "commander": "^14.0.2",
    "connect": "^3.7.0",
    "glob": "^13.0.0",
    "rollup-plugin-minify-template-literals": "^1.1.7",
    "vite": "^7.1.3"
  },
  "devDependencies": {
    "@inglorious/eslint-config": "workspace:*",
    "prettier": "^3.6.2",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">= 22"
  }
}
