{
  "name": "@inglorious/ssx",
  "version": "0.1.1",
  "description": "Server-Side-X. Xecution? Xperience? Who knows.",
  "author": "IceOnFire <antony.mistretta@gmail.com> (https://ingloriouscoderz.it)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IngloriousCoderz/inglorious-forge.git",
    "directory": "packages/store"
  },
  "homepage": "https://inglorious-engine.vercel.app/",
  "bugs": {
    "url": "https://github.com/IngloriousCoderz/inglorious-forge/issues"
  },
  "keywords": [
    "ssg",
    "ssr",
    "server",
    "inglorious",
    "web",
    "framework"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/store.js"
    },
    "./*": {
      "types": "./types/*.d.ts",
      "import": "./src/*"
    }
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write '**/*.{js,jsx}'",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "dependencies": {
    "@inglorious/web": "workspace:*",
    "happy-dom": "^20.0.11"
  },
  "devDependencies": {
    "@inglorious/eslint-config": "workspace:*",
    "prettier": "^3.6.2",
    "vite": "^7.1.3",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">= 22"
  }
}
