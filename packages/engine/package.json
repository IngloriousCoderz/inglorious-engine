{
  "name": "@inglorious/engine",
  "version": "0.3.0",
  "description": "A JavaScript game engine written with global state, immutability, and pure functions in mind. Have fun(ctional programming) with it!",
  "author": "IceOnFire <antony.mistretta@gmail.com> (https://ingloriouscoderz.it)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IngloriousCoderz/inglorious-engine.git"
  },
  "homepage": "https://inglorious-engine.vercel.app/",
  "bugs": {
    "url": "https://github.com/IngloriousCoderz/inglorious-engine/issues"
  },
  "keywords": [
    "data-oriented",
    "ecs",
    "functional-programming",
    "gamedev",
    "game-engine"
  ],
  "type": "module",
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./*": "./src/*"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write '**/*.{js,jsx}'",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "dependencies": {
    "@inglorious/utils": "workspace:*",
    "immer": "^10.1.1"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "vite": "^7.1.3",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">= 22"
  }
}
