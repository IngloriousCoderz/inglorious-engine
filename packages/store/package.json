{
  "name": "@inglorious/store",
  "version": "5.5.0",
  "description": "A state manager for real-time, collaborative apps, inspired by game development patterns and compatible with Redux.",
  "author": "IceOnFire <antony.mistretta@gmail.com> (https://ingloriouscoderz.it)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IngloriousCoderz/inglorious-engine.git"
  },
  "homepage": "https://inglorious-engine.vercel.app/",
  "bugs": {
    "url": "https://github.com/IngloriousCoderz/inglorious-engine/issues"
  },
  "keywords": [
    "state",
    "state-management",
    "store",
    "redux",
    "redux-alternative",
    "mutative",
    "immer",
    "collaborative",
    "multiplayer",
    "realtime",
    "event-batching"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/store.js"
    },
    "./*": {
      "import": "./src/*"
    }
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write '**/*.{js,jsx}'",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "dependencies": {
    "@inglorious/utils": "workspace:*",
    "mutative": "^1.3.0"
  },
  "peerDependencies": {
    "@inglorious/utils": "workspace:*"
  },
  "devDependencies": {
    "@inglorious/eslint-config": "workspace:*",
    "prettier": "^3.6.2",
    "vite": "^7.1.3",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">= 22"
  }
}
